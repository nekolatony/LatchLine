{
  "description": "LatchLine review gating hooks",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --project ${CLAUDE_PLUGIN_ROOT} latchline"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --project ${CLAUDE_PLUGIN_ROOT} latchline"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --project ${CLAUDE_PLUGIN_ROOT} latchline"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --project ${CLAUDE_PLUGIN_ROOT} latchline"
          }
        ]
      }
    ]
  }
}
